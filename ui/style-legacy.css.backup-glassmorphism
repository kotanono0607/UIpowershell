        box-shadow:
            0 0 20px rgba(255, 20, 147, 0.6),
            0 0 40px rgba(255, 105, 180, 0.4),
            0 0 60px rgba(255, 182, 193, 0.3),
            0 4px 12px rgba(0, 0, 0, 0.2);
    }
